{
  "name": "electron-starter",
  "version": "0.0.0",
  "description": "A minimal Electron application",
  "main": "./main/index.js",
  "type": "commonjs",
  "repository": "https://github.com/ygqygq2/ai-wallpaper",
  "keywords": [
    "vite",
    "react",
    "electron",
    "ai",
    "wallpaper",
    "typescript"
  ],
  "author": "ygqygq2",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \" npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "app:dir": "npm run build && electron-builder --dir",
    "app:dist": "npm run build && electron-builder",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "prepush": "pnpm run lint",
    "postinstall": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@ygqygq2/eslint-config": "^0.0.7",
    "@ygqygq2/stylelint-config": "^0.0.3",
    "@ygqygq2/typescript-config": "^0.0.3",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.1",
    "spectron": "^19.0.0",
    "tailwindcss": "^3.4.1",
    "vite": "^5.2.6"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged",
    "preserveUnused": true
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "pnpm run lint",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  }
}
